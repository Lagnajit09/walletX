{
  "buildCommand": "npx prisma generate && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": null,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "prisma/**",
          "node_modules/.prisma/**",
          "node_modules/@prisma/**"
        ],
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "dist/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/hdfcWebhook",
      "dest": "dist/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ]
}