{
  "name": "@lm.swiftpay/db",
  "version": "1.1.2",
  "description": "Database package for SwiftPay",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "files": [
    "dist/",
    "prisma/",
    "README.md"
  ],
  "scripts": {
    "build": "npx prisma generate && tsc",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push --skip-generate",
    "postinstall": "npx prisma generate"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "prisma": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
